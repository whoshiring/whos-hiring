    "prebuild": "npm run generate",
    "predev": "npm run generate",
    "studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/node": "^17.0.12"
  },
  "devDependencies": {
    "@whoshiring/config": "workspace:*",
    "@whoshiring/tsconfig": "workspace:*",
    "eslint": "^8.46.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
